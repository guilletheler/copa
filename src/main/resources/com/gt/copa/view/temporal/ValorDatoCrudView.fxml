<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>
<?import org.controlsfx.control.SearchableComboBox?>

<VBox fx:id="nodeView" prefHeight="600.0" prefWidth="800.0" stylesheets="@../copa.css" xmlns="http://javafx.com/javafx/16" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.gt.copa.controller.temporal.ValorDatoCrudController">
   <children>
      <Label id="titulo-panel" alignment="CENTER" prefWidth="5000.0" styleClass="pane-header" text="Valores de datos" />
      <HBox prefHeight="100.0" prefWidth="200.0">
         <children>
            <Label maxHeight="50.0" minWidth="65.0" prefWidth="65.0" text="Escenario">
               <HBox.margin>
                  <Insets left="5.0" />
               </HBox.margin>
            </Label>
            <SearchableComboBox fx:id="scmbFiltroEscenario" prefWidth="200.0">
            </SearchableComboBox>
            <Label maxHeight="50.0" minWidth="35.0" prefWidth="35.0" text="Dato">
               <HBox.margin>
                  <Insets left="5.0" />
               </HBox.margin>
            </Label>
            <SearchableComboBox fx:id="scmbFiltroDato" prefWidth="200.0">
            </SearchableComboBox>
            <Label maxHeight="50.0" minWidth="50.0" prefWidth="50.0" text="Periodo">
               <HBox.margin>
                  <Insets left="30.0" />
               </HBox.margin>
            </Label>
            <SearchableComboBox fx:id="scmbFiltroPeriodo" prefWidth="200.0">
            </SearchableComboBox>
         </children>
      </HBox>
      <HBox prefWidth="1000">
         <children>
            <TableView fx:id="tblValoresDatos" editable="true" minHeight="100.0" minWidth="100" prefHeight="5000.0" prefWidth="5000.0">
               <columns>
                  <TableColumn id="id-column" fx:id="colId" text="Id" />
                  <TableColumn fx:id="colEscenario" prefWidth="200.0" text="Escenario" />
                  <TableColumn fx:id="colDato" prefWidth="200.0" text="Dato" />
                  <TableColumn fx:id="colFecha" prefWidth="150" styleClass="number-column" text="Fecha" />
                  <TableColumn fx:id="colValor" prefWidth="150.0" text="Valor" />
               </columns>
               <HBox.margin>
                  <Insets bottom="5.0" left="5.0" top="5.0" />
               </HBox.margin>
            </TableView>
            <VBox maxWidth="90.0" minWidth="90.0" prefHeight="1000">
               <children>
                  <Button alignment="CENTER" maxWidth="80.0" mnemonicParsing="false" onAction="#btnNuevoClick" text="Nuevo">
                     <VBox.margin>
                        <Insets left="5.0" top="5.0" />
                     </VBox.margin>
                  </Button>
                  <Button alignment="CENTER" maxWidth="80.0" mnemonicParsing="false" onAction="#btnEliminarClick" text="Eliminar">
                     <VBox.margin>
                        <Insets left="5.0" top="5.0" />
                     </VBox.margin>
                  </Button>
                  <Button alignment="CENTER" maxWidth="80.0" mnemonicParsing="false" onAction="#btnGuardarClick" text="Guardar">
                     <VBox.margin>
                        <Insets left="5.0" top="15.0" />
                     </VBox.margin>
                  </Button>
                  <Button alignment="CENTER" maxWidth="80.0" mnemonicParsing="false" onAction="#btnImportarClick" text="Importar">
                     <VBox.margin>
                        <Insets left="5.0" top="15.0" />
                     </VBox.margin>
                  </Button>
               </children>
            </VBox>
         </children>
      </HBox>
   </children>
</VBox>
