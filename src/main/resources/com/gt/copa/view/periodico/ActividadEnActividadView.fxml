<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>
<?import org.controlsfx.control.SearchableComboBox?>

<VBox fx:id="nodeView" prefHeight="600.0" prefWidth="800.0" stylesheets="@../copa.css" xmlns="http://javafx.com/javafx/11.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.gt.copa.controller.periodico.ActividadEnActividadController">
   <children>
      <Label id="titulo-panel" alignment="CENTER" prefWidth="5000.0" styleClass="pane-header" text="Actividades en Actividades" />
      <VBox>
         <children>
            <HBox prefHeight="100.0" prefWidth="200.0">
               <children>
                  <Label maxHeight="50.0" prefHeight="50.0" text="Recurso">
                     <HBox.margin>
                        <Insets left="5.0" />
                     </HBox.margin>
                  </Label>
                  <SearchableComboBox fx:id="scmbFiltroRecurso" prefWidth="300.0">
                     <HBox.margin>
                        <Insets bottom="10.0" left="10.0" top="10.0" />
                     </HBox.margin>
                  </SearchableComboBox>
                  <Label maxHeight="50.0" prefHeight="50.0" text="Actividad">
                     <HBox.margin>
                        <Insets left="30.0" />
                     </HBox.margin>
                  </Label>
                  <SearchableComboBox fx:id="scmbFiltroActividad" prefWidth="300.0">
                     <HBox.margin>
                        <Insets bottom="10.0" left="10.0" top="10.0" />
                     </HBox.margin>
                  </SearchableComboBox>
               </children>
            </HBox>
            <HBox prefWidth="730.0">
               <children>
                  <TableView fx:id="tblAsignaciones" editable="true" minHeight="100.0" minWidth="100" prefHeight="5000.0" prefWidth="5000.0">
                     <columns>
                        <TableColumn id="id-column" fx:id="colId" text="Id" />
                        <TableColumn fx:id="colOrigen" prefWidth="200.0" text="Origen" />
                        <TableColumn fx:id="colDestino" prefWidth="200.0" text="Destino" />
                        <TableColumn fx:id="colComponenteDriver" prefWidth="200.0" text="Driver" />
                        <TableColumn fx:id="colValorParticular" prefWidth="100.0" styleClass="number-column" text="Valor" />
                     </columns>
                     <HBox.margin>
                        <Insets bottom="5.0" left="5.0" top="5.0" />
                     </HBox.margin>
                  </TableView>
                  <VBox maxWidth="80.0" minWidth="80.0" prefHeight="1000">
                     <children>
                        <Button alignment="CENTER" maxWidth="70.0" mnemonicParsing="false" onAction="#btnEliminarClick" text="Eliminar">
                           <VBox.margin>
                              <Insets left="5.0" top="5.0" />
                           </VBox.margin>
                        </Button>
                        <Button alignment="CENTER" maxWidth="70.0" mnemonicParsing="false" onAction="#btnGuardarClick" text="Guardar">
                           <VBox.margin>
                              <Insets left="5.0" top="15.0" />
                           </VBox.margin>
                        </Button>
                     </children>
                  </VBox>
               </children>
            </HBox>
         </children>
      </VBox>
   </children>
</VBox>
