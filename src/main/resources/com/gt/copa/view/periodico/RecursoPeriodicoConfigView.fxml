<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<VBox fx:id="nodeView" prefHeight="600.0" prefWidth="800.0" stylesheets="@../copa.css" xmlns="http://javafx.com/javafx/11.0.2" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.gt.copa.controller.periodico.RecursoPeriodicoConfigController">
   <children>
      <Label id="titulo-panel" alignment="CENTER" prefWidth="5000.0" text="Configuraciones de Recursos" styleClass="pane-header" />
      <HBox prefWidth="730.0">
         <children>
            <TableView fx:id="tblRecursosPeriodicas" editable="true" minHeight="100.0" minWidth="100" prefHeight="5000.0" prefWidth="5000.0">
               <columns>
                  <TableColumn fx:id="colId" id="id-column" text="Id" />
                  <TableColumn fx:id="colRecurso" prefWidth="200.0" text="Recurso" />
                  <TableColumn fx:id="colTipoDistribucion" prefWidth="100.0" text="Distribucion" />
                  <TableColumn fx:id="colTratamientoMuestra" prefWidth="100.0" text="Tratam muestra" />
                  <TableColumn fx:id="colTamanioMuestra" styleClass="number-column" prefWidth="100.0" text="Tamaño muestra" />
                  <TableColumn fx:id="colPromedioNoVacio" prefWidth="60.0" text="No vacío" />
               </columns>
               <HBox.margin>
                  <Insets bottom="5.0" left="5.0" top="5.0" />
               </HBox.margin>
            </TableView>
            <VBox maxWidth="80.0" minWidth="80.0" prefHeight="1000">
               <children>
                  <Button alignment="CENTER" maxWidth="70.0" mnemonicParsing="false" onAction="#btnEliminarClick" text="Eliminar">
                     <VBox.margin>
                        <Insets left="5.0" top="5.0" />
                     </VBox.margin>
                  </Button>
                  <Button alignment="CENTER" maxWidth="70.0" mnemonicParsing="false" onAction="#btnGuardarClick" text="Guardar">
                     <VBox.margin>
                        <Insets left="5.0" top="15.0" />
                     </VBox.margin>
                  </Button>
               </children>
            </VBox>
         </children>
      </HBox>
   </children>
</VBox>
